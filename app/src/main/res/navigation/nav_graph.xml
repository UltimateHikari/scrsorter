<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="ru.ultimatehikari.scrsorter.ui.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="ru.ultimatehikari.scrsorter.ui.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <activity
        android:id="@+id/settingsActivity"
        android:name="ru.ultimatehikari.scrsorter.ui.SettingsActivity"
        android:label="activity_settings"
        tools:layout="@layout/activity_settings">
    </activity>

    <activity
        android:id="@+id/appActivity"
        android:name="ru.ultimatehikari.scrsorter.ui.AppActivity"
        android:label="activity_app"
        tools:layout="@layout/activity_app" />
</navigation>